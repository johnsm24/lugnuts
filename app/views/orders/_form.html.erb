      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :orderDate %>
    <%= form.date_select :orderDate %>
  </div>

  <div class="field">
    <%= form.label :requiredDate %>
    <%= form.date_select :requiredDate %>
  </div>

  <div class="field">
    <%= form.label :shippedDate %>
    <%= form.date_select :shippedDate %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="field">
    <%= form.label :comments %>
    <%= form.text_area :comments %>
  </div>

  <div class="field">
    <%= form.label :customerNumber %>
    <%= form.number_field :customerNumber %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
